<div class="container">
  <div class="col-sm-offset-3 col-sm-5">
    <%= bootstrap_form_for(Ticket.new) do |f| %>
      <%= f.text_field :title %>
      <%= f.text_area :description %>
      <%= f.select(:status, [["Backlog", "Backlog"], ["Current Sprint", "Current Sprint"], ["In Progress", "In Progress"], ["Done", "Done"]]) %>
      <%= f.hidden_field :board_id, value: params[:board] %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
